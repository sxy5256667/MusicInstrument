<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    
    <Button
        android:id="@+id/o"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_x="0dp"
        android:layout_y="0dp" />
    

    <ImageView
        android:id="@+id/tick"
        android:layout_width="5dp"
        android:layout_height="200dp"
        android:layout_x="500dp"
        android:layout_y="100dp"
        android:background="#FF0000" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beats per bar"
        android:textAppearance="?android:attr/textAppearanceLarge"        
     	android:layout_x="50dp"
       	android:layout_y="120dp" />
    <Spinner
        android:id="@+id/beat"
        android:layout_width="60dp"
        android:layout_height="40dp"   
     	android:layout_x="200dp"
       	android:layout_y="112dp"/>
    
    <Button
        android:id="@+id/beats"
        android:layout_width="60dp"
        android:layout_height="40dp"
     	android:layout_x="150dp"
       	android:layout_y="195dp"
        android:text="60"
        android:textSize="25sp"   
        android:textColor="#000000"   
        android:background="#FFFFFF"  />

    <Button
        android:id="@+id/add1"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_x="100dp"
        android:layout_y="200dp"
        android:text="+1"
        android:textSize="20sp"      
        android:background="#5555FF"  />

    <Button
        android:id="@+id/sub1"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_x="220dp"
        android:layout_y="200dp"
        android:text="-1"
        android:textSize="20sp"      
        android:background="#5555FF" />

    <Button
        android:id="@+id/add5"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_x="50dp"
        android:layout_y="200dp"
        android:text="+5"
        android:textSize="20sp"      
        android:background="#5555FF" />

    <Button
        android:id="@+id/sub5"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_x="270dp"
        android:layout_y="200dp"
        android:text="-5"
        android:textSize="20sp"      
        android:background="#5555FF"/>
    
    <Button
        android:id="@+id/start"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_x="140dp"
        android:layout_y="270dp"
        android:text="start"
        android:textSize="20sp"      
        android:background="#5555FF"/>
    
    
    <Button
        android:id="@+id/play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_x="100dp"
        android:layout_y="14dp"
        android:background="@drawable/play" />

    <Button
        android:id="@+id/stop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_x="150dp"
        android:layout_y="14dp"
        android:background="@drawable/stop" />

    <Button
        android:id="@+id/record"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_x="200dp"
        android:layout_y="14dp"
        android:background="@drawable/record" />
    <Button
        android:id="@+id/rtnm"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_x="490dp"
        android:layout_y="19dp"
        android:background="@drawable/rtn" />

    

</AbsoluteLayout>